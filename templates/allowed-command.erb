<% if @comment -%>
# <%= @comment %>
<% end -%>
<% @defaults.each do |default| -%>
Defaults!<%= @command %> <%= default %>
<% end -%>
<% @allowed_env_variables.each do |env_variable| -%>
Defaults!<%= @command %> env_keep+=<%= env_variable %>
<% end -%>
<% tag_string = @all_tags ? " #{@all_tags.join(':')}:" : '' %>
<%= @user_spec %> <%= @host %>=(<%= @run_as %>)<%= tag_string %> <%= @command %>

